{% extends 'base.html.twig' %}

{% block body %}

    <div class="media">
        <div class="media-body">
            {% for program in programs %}
                <h2>{{ program.id }} {{ program.title}}</h2>
                <p>{{ program.summary }}</p>
                <p>{{ program.poster }}</p>

            <p>Les 3 derniers programmes de la catégorie {{ program.category.name }}</p>
            {% endfor %}
        </div>
    </div>
    <div>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
